#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use App\Command\ShowCsvCommand;
use App\Command\ExportExcelCommand;
use App\Service\CsvReader;
use App\Service\ExcelExporter;

$application = new Application('CSV CLI', '1.0.0');

// Service aanmaken en injecteren in command
$csvReader = new CsvReader();
$application->add(new ShowCsvCommand($csvReader));
$excelExporter = new ExcelExporter($csvReader);
$application->add(new ExportExcelCommand($excelExporter));

$application->run();
